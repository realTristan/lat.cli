% #1: Scale
% #2: Image Path
\define@key{images}{scale}{\def\scale{#1}}
\define@key{images}{path}{\def\path{#1}}
\def\scale{1}\def\path{}
\def\image#1{\setkeys{images}{#1}
  \includegraphics[scale=\scale]{\path}
}


