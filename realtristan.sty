% Easy Equation
\def\eq#1{$#1$}

% Left Align
\def\lalign{\@ifstar\@lalign\@@lalign}
\def\@lalign#1{\@fleqntrue
  \begin{flalign*}#1\end{flalign*}
  \leavevmode
}
\def\@@lalign#1{\@fleqntrue
  \begin{flalign}#1\end{flalign}
  \leavevmode
}

% Middle Align
\def\malign{\@ifstar\@malign\@@malign}
\def\@malign#1{\@fleqnfalse
  \begin{align*}#1\end{align*}
  \leavevmode
}
\def\@@malign#1{\@fleqnfalse
  \begin{align}#1\end{align}
  \leavevmode
}


